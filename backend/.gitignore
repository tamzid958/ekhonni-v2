# Build tool-specific files
.gradle/                         # Gradle folder
build/                           # Build output
!gradle/wrapper/gradle-wrapper.jar # Include Gradle wrapper jar
!**/src/main/**/build/           # Exclude build folders under source directories
!**/src/test/**/build/           # Exclude test build folders

# Operating system-specific files
.DS_Store                        # macOS system file
Thumbs.db                        # Windows thumbnail cache

# Spring Tool Suite (STS) files
.apt_generated
.classpath
.factorypath
.project
.settings/
.springBeans
.sts4-cache
bin/
!**/src/main/**/bin/             # Exclude bin folders under source directories
!**/src/test/**/bin/             # Exclude bin folders under test directories

# IntelliJ IDEA-specific files
.idea/                           # IntelliJ project settings
*.iws                            # IntelliJ workspace file
*.iml                            # IntelliJ module file
*.ipr                            # IntelliJ project file
out/                             # IntelliJ output folder
!**/src/main/**/out/             # Exclude output folders under source directories
!**/src/test/**/out/             # Exclude output folders under test directories

# NetBeans IDE-specific files
/nbproject/private/
nbbuild/
dist/
nbdist/
.nb-gradle/

# Visual Studio Code-specific files
.vscode/

# Logs
*.log                            # Log files

# Temporary files
*.tmp                            # Temporary files

# Application-specific sensitive files
application.properties           # Spring Boot configuration
application.yml                  # Spring Boot YAML configuration
.env                             # Environment files
config/                          # Config folder if used for sensitive data

# Editor-specific files
*.swp                            # Swap files (e.g., vim)
*.swo

# Java-specific files
*.class                          # Compiled class files
*.jar                            # Compiled JAR files
*.war                            # Compiled WAR files
*.ear                            # Compiled EAR files

# Ignore target directories (Maven builds)
target/

# Ignore backups and caches
*.bak                            # Backup files
*.cache                          # Cache files
